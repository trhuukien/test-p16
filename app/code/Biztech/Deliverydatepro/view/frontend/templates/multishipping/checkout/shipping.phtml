                            foreach ($processingDayArray as $key => $processingDay) {
                                if (in_array($key, $dayOffsArray)) {
                                    $orderProcessingTime = $orderProcessingTime + $processingDay;
                                }
                            }
                        }
                    }
                    $ordProcessTime[$_address->getAddressId()] = $orderProcessingTime;
