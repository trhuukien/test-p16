                        </svg>
                    <?php else: ?>
                        <?= $escaper->escapeHtml($crumbInfo['label']) ?>
                    <?php endif; ?>
                    </a>
                <?php elseif ($crumbInfo['last']): ?>
                    <span
                       class="text-primary-lighter"
                       aria-current="page"
                    ><?= $escaper->escapeHtml($crumbInfo['label']) ?></span>
                <?php else: ?>
                    <?= $escaper->escapeHtml($crumbInfo['label']) ?>
                <?php endif; ?>
                </li>
            <?php endforeach; ?>
        </ol>
    </div>
</nav>
<?php endif; ?>
